  <title>Xappia: Â¡GIF!</title>
</head>

<body>
  <noscript>
    You need to enable JavaScript to run this app.
  </noscript>
  <div class="container">
    <center>
      <div class="col-12">
        <img class="img-responsive" src="https://s3-us-west-2.amazonaws.com/xappia-demo/{{gif}}" alt="">
      </div>
      <div class="col-12 my-2">
        <button id="download-gif" class="btn btn-primary tooltip" data-tooltip="Download GIF">
          <span class="material-icons">file_download</span>
        </button>
        <button id="facebook-share" class="btn btn-primary tooltip" data-tooltip="Share on Facebook">
          <i class="fa fa-facebook fa-lg"></i>
        </button>
        <button id="twitter-share" class="btn btn-primary tooltip" data-tooltip="Share on Twitter">
          <i class="fa fa-twitter fa-lg"></i>
        </button>
        <button id="copy" class="btn btn-primary tooltip" data-tooltip="Copy Link">
          <span class="material-icons">link</span>
        </button>
      </div>
    </center>
  </div>
  <script src="https://use.fontawesome.com/329e347ede.js"></script>
  <div id="fb-root"></div>
  <script>(function (d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.11&appId=815877818571792';
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
  <script>
    document.getElementById('facebook-share').onclick = () => {
      FB.ui({
        method: 'share',
        display: 'popup',
        href: window.location.href,
      }, function (response) { });
    }
  </script>
  <script>
    const getWindowOptions = () => {
      const width = 500;
      const height = 350;
      const left = (window.innerWidth / 2) - (width / 2);
      const top = (window.innerHeight / 2) - (height / 2);

      return [
        'resizable,scrollbars,status',
        'height=' + height,
        'width=' + width,
        'left=' + left,
        'top=' + top,
      ].join();
    };

    const twitterBTN = document.getElementById('twitter-share');
    var text = encodeURIComponent('Hey everyone, come & see how #Xappia changed my life!');
    var shareUrl = 'https://twitter.com/intent/tweet?url=' + window.location.href + '&text=' + text;
    twitterBTN.href = shareUrl; // 1

    twitterBTN.onclick = () => {
      var win = window.open(shareUrl, 'ShareOnTwitter', getWindowOptions());
      win.opener = null; // 2
    }

  </script>
  <script>
    document.getElementById('copy').onclick = () => {
      const ta = document.createElement('textarea');
      ta.value = window.location.href;
      document.body.appendChild(ta);
      ta.select();
      document.execCommand('copy');
      ta.remove();
    }
  </script>
  <script>
    document.getElementById('download-gif').onclick = () => {
      const link = document.createElement("a");
      link.download = 'Xappia.gif';
      link.href = 'https://s3-us-west-2.amazonaws.com/xappia-demo/{{gif}}';
      link.click();
    }
  </script>

</body>

